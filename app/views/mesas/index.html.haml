.row 
  .col-sm-6
    %h1 Mesas
  .col-sm-6.text-right
    %br
    %br
    = form_tag("/mesas", method: "get", class: 'form-inline') do
      .input-group
        - if !params[:q].nil?
          - q = params[:q]
        - else
          - q = ''
        = text_field_tag :q, nil,  class: 'form-control', placeholder: 'Nombre', value: "#{q}"
        .input-group-btn
          %button.btn.btn-default{type: "submit"}
            %span.glyphicon.glyphicon-search  

  
= link_to 'Crear Mesa', new_mesa_path, class: 'btn btn-primary'
%br
%br
