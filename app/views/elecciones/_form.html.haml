= form_for @eleccione, :html => { class: 'form-horizontal', role: 'form' } do |f|
  - if @eleccione.errors.any?
    #error_explanation
      %h2= "#{pluralize(@eleccione.errors.count, "error")}"
      %ul
        - @eleccione.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :nombre, class: 'col-sm-2 control-label'
    .col-sm-3
      = f.text_field :nombre, class: 'form-control'
  .form-group
    .col-sm-2
    .col-sm-3
      = f.submit 'Guardar', class: 'btn btn-default'
